<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.portfolio.PortfolioFragment">

    <TextView
        android:id="@+id/portfolio_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="14dp"
        android:text="@string/portfolio_text"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginVertical="200dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/portfolio_url_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="10dp"
        android:text="@string/portfolio_text_button"
        app:layout_constraintTop_toBottomOf="@+id/portfolio_text"
        tools:layout_editor_absoluteX="89dp" />

</androidx.constraintlayout.widget.ConstraintLayout>